extends layout.pug
block content 
  h1 Create Category
  form(method='post', action='/create-category')
    label(for='name') Name:
    input(name='name', type='text', required='true', value=(undefined===category ? '' : category.name))
    label(for='description') Description: 
    textarea(cols="30", rows="10", class='description' name='description', type='text', required='true', value=(undefined===category ? '' : category.description))
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg