html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body  
    section(class='top-bar')
      img(class='logo', src='/images/logo.png', alt='beatiful and humerous logo', width='170', height='80')
      nav(class='nav-bar')
        a(class='nav-item first', href='/shop') Shop
        a(class='nav-item', href='/create-category') Create Category 
        a(class='nav-item last', href='/create-item') List Item
        a(class='nav-item filler') Secret
    section(class='content')
      div(class='text-and-button')
        h1(class='headline') A CRUD Shopping Experience Made By The People For The People
        h4(class='explanation') An online shopping experience that allows for the users to create the store themselves.
        button(class='to-shop') Shop Now
        script. 
          const btn = document.querySelector('.to-shop')
          btn.addEventListener('click', () => {window.location.href = '/shop'})
          
      img(class='content-image' src='/images/basket.png', alt='Green Sign', width='420', height='350')
    block content
