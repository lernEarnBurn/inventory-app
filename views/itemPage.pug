extends layout.pug
block content 
  section(class='item-page')
    div(class='item-image-container')
      if (itemData.image)
        img(src=`data:${itemData.image.image.contentType};base64,${itemData.image.image.data.toString('base64')}`, width='100%', height='100%', alt='item image' class='item-image')
      else
        img(src='/images/placeholder.png', width='100%', height='100%', alt='placeholder image' class='item-image')
    div(class='item-information')
      h1(class='item-name') #{itemData.name}
      h2(class='item-description') #{itemData.description}
      div(class='category-link-container')
        each category in itemData.category 
          a(href=category.url)
            p #{category.name}
      div(class='bottom-info')
        h2 #{itemData.priceString}
        p(class='price-seperator') .
        p #{itemData.inStock} left in stock
      button(class='add-to-cart') Add To Cart
